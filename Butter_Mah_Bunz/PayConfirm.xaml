<Page x:Class="Butter_Mah_Bunz.PageTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Butter_Mah_Bunz"
      mc:Ignorable="d"
      Title="PageTemplate" Width="414" Height="896">

    <Grid Width="414" Height="896" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFEDD4AB">
        <Grid HorizontalAlignment="Stretch" Height="166" VerticalAlignment="Top" Background="#FFD28B17">
            <Image Margin="10,12,249,12" Source="/Media/BMB.png" Stretch="Fill"/>
            <TextBlock HorizontalAlignment="Left" Height="30" Margin="170,12,0,0" TextWrapping="Wrap" Text="Location" VerticalAlignment="Top" Width="237" TextAlignment="Center" FontSize="22"/>
            <TextBlock x:Name="headLocation" HorizontalAlignment="Left" Height="30" Margin="170,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" TextAlignment="Center" FontSize="22"/>
            <TextBlock HorizontalAlignment="Left" Height="30" Margin="170,83,0,0" TextWrapping="Wrap" Text="Hours" VerticalAlignment="Top" Width="237" TextAlignment="Center" FontSize="22"/>
            <TextBlock x:Name="headHours" HorizontalAlignment="Left" Height="30" Margin="170,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" TextAlignment="Center" FontSize="22"/>
        </Grid>
        <StackPanel  Orientation="Vertical" 
                     Margin="7,165,7,0">
            <TextBlock Width="auto" 
                       Height="auto"
                       Margin="0,50,0,0"
                       HorizontalAlignment="Center"
                       Text="Order Complete" 
                       FontSize="48" 
                       FontWeight="UltraBold" 
                       FontFamily="/Fonts/#Indie Flower"  >
                <TextBlock.Effect>
                    <DropShadowEffect
                        ShadowDepth="3"
                        Direction="360"
                        Opacity="1"
                        BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="orderReadyTime" Text="Your Order will be ready at 3:61"
                       Width="auto"
                       Height="auto"
                       HorizontalAlignment="Center"
                       FontSize="26"
                       FontFamily="/Fonts/#Indie Flower"
                       FontWeight="Normal"/>
            
                <Expander x:Name="orderDetailsExpander" Height="auto" 
                          Header="Order Details" 
                          Width="300"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          BorderBrush="#CF3613"
                          BorderThickness="6"  
                          FontFamily="/Fonts/#Indie Flower"
                          FontSize="18"
                          >

                    <TextBlock x:Name="orderDetails" Text="Your Order Details will go here
                               Burger______________$XX.xx
                               Other Burger___________$XX.xx
                               Total ____________$XX.xx"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                </Expander>
            
            <Button x:Name="homeButton" 
                Width="126"
                Margin="0,150,0,0">
                <Button.Template>
