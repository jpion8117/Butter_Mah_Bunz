        </Grid>
        <StackPanel Orientation="Vertical" Margin="15,179,15,0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock HorizontalAlignment="Center" Text="Full Weekly Schedule" FontSize="24" FontFamily="Roboto" FontWeight="Bold" />
