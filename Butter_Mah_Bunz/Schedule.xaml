                    <TextBlock x:Name="Day0" HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" Text="Today" VerticalAlignment="Top" FontFamily="Roboto" FontSize="30" Foreground="White"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,47,0,0" TextWrapping="Wrap" Text="Hours:&#x9;" VerticalAlignment="Top" FontFamily="Roboto" FontSize="18" Foreground="White" RenderTransformOrigin="0.574,-0.533" FontWeight="Normal"/>
                    <TextBlock x:Name="Hours0" HorizontalAlignment="Left" Margin="25,0,0,0" TextWrapping="Wrap" VerticalAlignment="Bottom"  FontSize="18" FontFamily="Roboto" Text="10:30-13:00" Foreground="White" FontWeight="Normal"/>
                    <TextBlock HorizontalAlignment="Left" Margin="203,18,0,0" TextWrapping="Wrap" Text="Address:" VerticalAlignment="Top" FontFamily="Roboto" FontSize="18" Foreground="White"/>
                    <TextBlock x:Name="Location0" HorizontalAlignment="Left" Margin="203,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Roboto" Text="421 S Airport Traverse City MI " FontWeight="Normal" FontSize="18" Foreground="White"/>
